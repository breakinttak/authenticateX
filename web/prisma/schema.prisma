generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserDev{
  id      Int      @id @default(autoincrement())
  name String
  email String
  password String
  imageUrl String?
  Useruser UserUser[]
  UserDevId Int? @unique
}

model UserUser{
  id Int @id @default(autoincrement())
  name String
  email String 
  password String
  userDev UserDev @relation(fields:[id],references:[UserDevId])
  organizations Organizations[]
  UserUserId Int? @unique
}

model Organizations{
  id Int @id @default(autoincrement())
  name String
  members UserUser @relation(fields:[UserId],references:[UserUserId])
  UserId Int @unique
}